@model MailDto;

<div style="max-width: 500px; margin: auto; margin-top: 20px; padding: 30px; border: 1px solid #ddd; border-radius: 8px; text-align: center;">
    <form id="mailForm" asp-controller="MailSend" asp-action="Index" asp-area="Person" method="post">
        <div class="form-group">
            <label for="Email">E-Posta Adresi (Gönderen):</label>
            <input asp-for="Sender" class="form-control" readonly value="durholding@gmail.com" />
        </div>

        <div class="form-group">
            <label asp-for="Reciver" for="Email">E-Posta Adresi (Gönderilen):</label>
            <input asp-for="Reciver" type="email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Konu">Konu:</label>
            <input asp-for="Subject" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Icerik">İçerik:</label>
            <textarea asp-for="Body" class="form-control" rows="6" cols="50"></textarea>
        </div>

        <div class="form-group">
            <button type="button" onclick="submitForm()" class="btn btn-primary">E Posta Gönder</button>
        </div>
    </form>

    <!-- Uyarı kutusu için div -->
    <div id="notification" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #f8d7da; color: #319944; padding: 10px; border: 1px solid #f5c6cb; border-radius: 5px; z-index: 1000; font-size: 20px;">
        İşleme alındı!
    </div>
</div>

<script>
    function submitForm() {
        var mailForm = document.getElementById('mailForm');
        var notification = document.getElementById('notification');

        // Uyarı kutusunu göster
        notification.style.display = 'block';

        // Ajax ile formu sunucuya gönder
        fetch(mailForm.action, {
            method: mailForm.method,
            body: new FormData(mailForm),
        })
            .then(response => {
                if (response.ok) {
                    // Başarılı ise formu temizle
                    mailForm.reset();
                } else {
                    // Hata durumunda kullanıcıya bilgi verebilirsiniz.
                    alert('E-posta gönderme hatası!');
                }
            })
            .catch(error => {
                console.error('E-posta gönderme hatası:', error);
                // Hata durumunda kullanıcıya bilgi verebilirsiniz.
            })
            .finally(() => {
                // Belirli bir süre sonra uyarı kutusunu gizle
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 5000);
            });
    }
</script>







